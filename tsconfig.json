{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./mylibs/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "transpileOnly": false,
        "instance": "core",
        "ignoreDiagnostics": [
            8005, //implements can only be used in ts files
            8010 //types can only be used in ts files
        ]
    }
}